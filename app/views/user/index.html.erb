<% if user_signed_in? %>
	<div style="float: Left; width: 300px;">
		<%= image_tag(current_user.avatar_url) if current_user.avatar? %>
	</div>
	<div class="user_info" style="margin-left: 350px;">
		<div>
			<h3>
				<%= current_user.first_name %>
	    		<%= current_user.last_name %>
			</h3>
		</div>
		<div class="user_social">
			<%= link_to image_tag("facebook.png", :border => 0), current_user.facebook %>
			<%= link_to image_tag("vkontakte.png", :border => 0), current_user.vkontakte %>
		</div>		
		<table cellpadding="3" cellspacing="2" >
			<th>I can</th>
			<th>I need</th>
			<tr>
				<td>
					<p>
						<%= current_user.i_can %>
					</p>	
				</td>
				<td>
					<p>
						<%= current_user.i_need %>
					</p>
				</td>
			</tr>
		</table>
		
	</div>
<% end %>
